@namespace Skclusive.Material.Table
@inherits TableSortLabelComponent

<ButtonBase
    RootRef="@RootRef"
    Component="@Component"
    Class="@_Class"
    Style="@_Style"
    DisableRipple
    OnClick="@HandleClickAsync">
    @ChildContent
    @if (!HideSortIcon || Active)
    {
        <ArrowDownwardIcon
            Class="@_IconClass"
            Style="@_IconStyle" />
    }
</ButtonBase>
