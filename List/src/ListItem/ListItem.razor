@namespace Skclusive.Material.List
@inherits ListItemComponent

<CascadingValue Value="ChildContext">
    @if (HasSecondaryAction)
    {
        <Component RootRef="@RootRef"
                   ChildRef="@ChildRef"
                   Tag="@ContainerComponent"
                   Class="@_ContainerClass"
                   Style="@_ContainerStyle"
                   Disabled="@Disabled">
                @if (Button)
                {
                    <ButtonBase Component="@_Component"
                            Class="@_Class"
                            Style="@_Style"
                            Disabled="@Disabled"
                            FocusVisibleClass="@_FocusVisibleClass"
                            OnClick="@HandleClick"
                            @attributes="Attributes"
                            Context="ChildContext">
                        @ChildContent(GetItemContext(ChildContext))
                    </ButtonBase>

                } else
                {
                    <Component Tag="@_Component"
                               NoWrap="@NoWrap"
                               Class="@_Class"
                               Style="@_Style"
                               Disabled="@Disabled"
                               @attributes="Attributes"
                               Context="ChildContext">
                            @ChildContent(GetItemContext(ChildContext))
                    </Component>
                }
            @SecondaryAction
        </Component>
    } else
    {
        @if (Button)
        {
            <ButtonBase RootRef="@RootRef"
                        ChildRef="@ChildRef"
                        Component="@_Component"
                        Class="@_Class"
                        Style="@_Style"
                        Disabled="@Disabled"
                        FocusVisibleClass="@_FocusVisibleClass"
                        OnClick="@HandleClick"
                        @attributes="Attributes"
                        Context="ChildContext">
                 @ChildContent(GetItemContext(ChildContext))
            </ButtonBase>

        } else
        {
            <Component RootRef="@RootRef"
                       ChildRef="@ChildRef"
                       Tag="@_Component"
                       NoWrap="@NoWrap"
                       Class="@_Class"
                       Style="@_Style"
                       Disabled="@Disabled"
                       @attributes="Attributes"
                       Context="ChildContext">
                 @ChildContent(GetItemContext(ChildContext))
            </Component>
        }
    }
</CascadingValue>