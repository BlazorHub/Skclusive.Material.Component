@inherits StyleComponentBase

<style data-name="List">

    .List-Root {
        margin: 0;
        padding: 0;
        position: relative;
        list-style: none;
    }

    .List-Padding {
        padding-top: 8px;
        padding-bottom: 8px;
    }

    .List-Subheader {
        padding-top: 0;
    }

</style>

<style data-name="ListItem">

    .ListItem-Root {
        width: 100%;
        display: flex;
        position: relative;
        box-sizing: border-box;
        text-align: left;
        align-items: center;
        padding-top: 8px;
        padding-bottom: 8px;
        justify-content: flex-start;
        text-decoration: none;
    }

    .ListItem-Root.ListItem-FocusVisible {
        background-color: var(--theme-palette-action-selected, rgba(0, 0, 0, 0.14));
    }

    .ListItem-Root.ListItem-Selected, .ListItem-Root.ListItem-Selected:hover {
        background-color: var(--theme-palette-action-selected, rgba(0, 0, 0, 0.14));
    }

    .ListItem-Root.ListItem-Disabled {
        opacity: 0.5;
    }

    .ListItem-Container {
        position: relative;
    }

    .ListItem-Dense {
        padding-top: 4px;
        padding-bottom: 4px;
    }

    .ListItem-AlignItems-FlexStart {
        align-items: flex-start;
    }

    .ListItem-Divider {
        border-bottom: 1px solid var(--theme-palette-divider, rgba(0, 0, 0, 0.12));
        background-clip: padding-box;
    }

    .ListItem-Gutters {
        padding-left: 16px;
        padding-right: 16px;
    }

    .ListItem-Button {
        transition: background-color 150ms cubic-bezier(0.4, 0, 0.2, 1) 0ms;
    }

    .ListItem-Button:hover {
        text-decoration: none;
        background-color: var(--theme-palette-action-hover, rgba(0, 0, 0, 0.08));
    }

    @media (hover: none) {
        .ListItem-Button:hover {
            background-color: transparent;
        }
    }

    .ListItem-SecondaryAction {
        padding-right: 48px;
    }

</style>

<style data-name="ListItemAvatar">

    .ListItemAvatar-Root {
        min-width: 56px;
        flex-shrink: 0;
    }

    .ListItemAvatar-AlignItems-FlexStart {
        margin-top: 8px;
    }

</style>

<style data-name="ListItemIcon">

    .ListItemIcon-Root {
        color: var(--theme-palette-action-active, rgba(0, 0, 0, 0.54));
        display: inline-flex;
        min-width: 56px;
        flex-shrink: 0;
    }

    .ListItemIcon-AlignItems-FlexStart {
        margin-top: 8px;
    }

</style>

<style data-name="ListItemSecondaryAction">

    .ListItemSecondaryAction-Root {
        top: 50%;
        right: 16px;
        position: absolute;
        transform: translateY(-50%);
    }

</style>

<style data-name="ListItemText">

    .ListItemText-Root {
        flex: 1 1 auto;
        min-width: 0;
        margin-top: 4px;
        margin-bottom: 4px;
    }

    .ListItemText-Multiline {
        margin-top: 6px;
        margin-bottom: 6px;
    }

    .ListItemText-Inset {
        padding-left: 56px;
    }

</style>

<style data-name="ListSubheader">

    .ListSubheader-Root {
        color: var(--theme-palette-text-secondary, rgba(0, 0, 0, 0.54));
        font-size: calc(var(--theme-font-size-rem-factor, 0.0625) * 14rem);
        box-sizing: border-box;
        list-style: none;
        font-family: var(--theme-typography-font-family, "Roboto", "Helvetica", "Arial", sans-serif);
        font-weight: var(--theme-typography-font-weight-medium, 500);
        line-height: 48px;
    }

    .ListSubheader-Color-Primary {
        color: var(--theme-palette-primary-main, #1976d2);
    }

    .ListSubheader-Color-Inherit {
        color: inherit;
    }

    .ListSubheader-Gutters {
        padding-left: 16px;
        padding-right: 16px;
    }

    .ListSubheader-Inset {
        padding-left: 72px;
    }

    .ListSubheader-Sticky {
        top: 0;
        z-index: 1;
        position: sticky;
        background-color: inherit;
    }

</style>