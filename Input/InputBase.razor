@inherits InputBaseComponent

<Component RootRef="@RootRef"
           Tag="@Component"
           Class="@_Class"
           Style="@_Style"
           @attributes="Attributes">
   @*  @StartAdornment *@ 
    <Component RootRef="@context.RefBack"
               @ref="Input"
               Tag="@InputComponent"
               id="@Id"
               type="@Type"
               name="@Name"
               class="@_InputClass"
               value="@Value"
               disabled="@Disabled"
               autofocus="@AutoFocus"
               autocomplete="@AutoComplete"
               placeholder="@PlaceHolder"
               readonly="@ReadOnly"
               required="@Required"
               aria-required="@Required"
               aria-invalid="@Error"
               @onchange="HandleChangeAsync"
               @onfocus="HandleFocusAsync"
               @onblur="HandleBlurAsync"
               @oninput="HandleInputAsync" />
     @* @EndAdornment *@ 
        @RenderSuffix
</Component>
