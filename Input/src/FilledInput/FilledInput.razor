@namespace Skclusive.Material.Input
@inherits FilledInputComponent

<InputBase
    RootRef="@RootRef"
    @ref="Input"
    Class="@_Class"
    Style="@_Style"
    Overridable="@Selector"
    @attributes="Attributes"
    Focused="@Focused"
    Disabled="@Disabled"
    AutoComplete="@AutoComplete"
    AutoFocus="@AutoFocus"
    DefaultValue="@DefaultValue"
    FullWidth="@FullWidth"
    InputComponent="@Component"
    Multiline="@Multiline"
    Name="@Name"
    PlaceHolder="@PlaceHolder"
    ReadOnly="@ReadOnly"
    Rows="@Rows"
    RowsMax="@RowsMax"
    Select="@Select"
    Type="@Type"
    Value="@Value"
    OnChange="@OnChange"
    OnFocus="@HandleFocus"
    OnBlur="@HandleBlur"
    HasStartAdornment="@HasStartAdornment"
    HasEndAdornment="@HasEndAdornment"
    InputClass="@InputClass">
    <StartAdornment>
        @StartAdornment
    </StartAdornment>
    <EndAdornment>
        @EndAdornment
    </EndAdornment>
</InputBase>
